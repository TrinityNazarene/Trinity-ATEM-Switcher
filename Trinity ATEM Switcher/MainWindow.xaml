        mc:Ignorable="d"
        Title="Trinity ATEM Switcher" WindowState="Maximized" Width="1920" Height="1024" Background="#FF252526">
    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="Button.Pressed.RedBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFDE6767" Offset="0"/>
            <GradientStop Color="#FFA80E0E" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Button.MouseOver.RedBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFDC5555" Offset="0"/>
            <GradientStop Color="#FFCC6565" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Button.Pressed.GreenBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF72DE67" Offset="0"/>
            <GradientStop Color="#FF1CA80E" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Button.MouseOver.GreenBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF9CE851" Offset="0"/>
            <GradientStop Color="#FF59A34F" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Button.Pressed.YellowBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFDEAB31" Offset="0"/>
            <GradientStop Color="#FFEA8A0C" Offset="1"/>
