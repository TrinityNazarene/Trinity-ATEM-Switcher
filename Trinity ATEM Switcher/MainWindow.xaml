        <LinearGradientBrush x:Key="Button.MouseOver.YellowBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFDFAD56" Offset="0"/>
            <GradientStop Color="#FFC78A29" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.RedBorder" Color="#FF800808"/>
        <SolidColorBrush x:Key="Button.Pressed.RedBorder" Color="#FF800808"/>
        <SolidColorBrush x:Key="Button.MouseOver.GreenBorder" Color="#FF088013"/>
        <SolidColorBrush x:Key="Button.Pressed.GreenBorder" Color="#FF088013"/>
